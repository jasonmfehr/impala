{
  "image": "apache/impala-dev:stable",
  "name": "Impala-Dev",
  "workspaceMount": "type=volume,target=/home/impdev/impala",
  "mounts": [
    "source=/tmp/.impala-devcontainer-git,target=/.impala-devcontainer-git,type=bind,consistency=cached,readonly"
  ],
  "workspaceFolder": "/home/impdev/impala",
  "remoteUser": "impdev",
  "containerUser": "impdev",
  "updateRemoteUserUID": false,
  "initializeCommand": "git config --get-regexp 'user.*|core.editor' > /tmp/.impala-devcontainer-git || true",
  "onCreateCommand": "/home/impdev/impala/.devcontainer/regen-ssh-keys.sh 2>&1 | sudo tee -a /var/log/devcontainer-regen-ssh-keys.log",
  "postStartCommand": "/home/impdev/impala/.devcontainer/entrypoint.sh 2>&1 | sudo tee -a /var/log/devcontainer-entrypoint.log",
  "postAttachCommand": "/home/impdev/impala/.devcontainer/configure-container.sh 2>&1 | sudo tee -a /var/log/devcontainer-configure.log",
  "runArgs": [
      "--add-host=ip4.impala.test:127.0.0.1",
      "--add-host=ip4:127.0.0.1",
      "--add-host=ip46.impala.test:127.0.0.1",
      "--add-host=ip6.impala.test:[::1]",
      "--add-host=ip6:[::1]",
      "--add-host=ip46:[::1]"
  ],
  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb"
  },
  "forwardPorts": [
    55888
  ],
  "appPort": [
    "25000:25000",
    "25001:25001",
    "25002:25002",
    "25003:25003",
    "25004:25004",
    "25005:25005",
    "25006:25006",
    "25007:25007",
    "25008:25008",
    "25009:25009",
    "25010:25010",
    "25020:25020",
    "21050:21050",
    "21051:21051",
    "21052:21052",
    "21053:21053",
    "21054:21054",
    "21055:21055",
    "21056:21056",
    "21057:21057",
    "21058:21058",
    "21059:21059",
    "28000:28000",
    "28001:28001",
    "28002:28002",
    "28003:28003",
    "28004:28004",
    "28005:28005",
    "28006:28006",
    "28007:28007",
    "28008:28008",
    "28009:28009",
    "5432:5432",
    "6080:6080"
  ]
}

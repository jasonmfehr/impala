{
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "options": [
      "--force-rm",
      "--progress=plain",
      "--add-host=ip4.impala.test:127.0.0.1",
      "--add-host=ip4:127.0.0.1",
      "--add-host=ip6.impala.test:127.0.0.1",
      "--add-host=ip6:127.0.0.1",
      "--add-host=ip46.impala.test:127.0.0.1",
      "--add-host=ip46:127.0.0.1",
      "--add-host=buildkitsandbox:127.0.0.1"
    ]
  },
  "updateRemoteUserUID": false,
  "features": {
    "ghcr.io/devcontainers-extra/features/vscode-server:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "autoOpenWorkspace.enableAutoOpenAlwaysFirst": true,
        "cmake.cmakePath": "${env:IMPALA_TOOLCHAIN_PACKAGES_HOME}/cmake-${env:IMPALA_CMAKE_VERSION}/bin/cmake",
        "telemetry.telemetryLevel": "off"
      },
      "extensions": [
        "ms-vscode.cmake-tools",
        "llvm-vs-code-extensions.vscode-clangd",
        "vadimcn.vscode-lldb",
        "webfreak.debug",
        "vscjava.vscode-java-pack",
        "ms-python.python",
        "mohsen1.prettify-json",
        "alefragnani.bookmarks",
        "zoma.vscode-auto-open-workspace",
        "coolchyni.beyond-debug",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack"
      ]
    }
  }
}
